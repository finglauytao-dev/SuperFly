<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <!-- Base application theme. -->
    <style name="ZAppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="windowNoTitle">true</item>
        <item name="android:windowFullscreen">true</item>
    </style>

  <style name="SplashActivityAnim" parent="ZAppTheme">
        <item name="android:windowAnimationStyle">@style/SplashAnimStyle</item>
    </style>

    <style name="SplashAnimStyle">
        <item name="android:activityOpenEnterAnimation">@anim/splash_in_anim</item>
        <item name="android:activityOpenExitAnimation">@anim/splash_out_anim</item>
        <item name="android:activityCloseEnterAnimation">@anim/splash_in_anim</item>
        <item name="android:activityCloseExitAnimation">@anim/splash_out_anim</item>
    </style>

</resources>
